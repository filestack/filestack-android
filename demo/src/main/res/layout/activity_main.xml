<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.filestack.android.demo.MainActivity">

    <Button
        android:id="@+id/filestack_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filestack"
        android:layout_centerInParent="true"
        android:onClick="openFilestack"/>

    <Button
        android:id="@+id/file_browser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Browser"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/filestack_button"
        android:onClick="openFileBrowser"/>

</RelativeLayout>
